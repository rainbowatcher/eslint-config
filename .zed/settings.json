{
    "features": {
        "copilot": false
    },
    "formatter": {
        "code_actions": {
            "source.fixAll.eslint": true,
        },
    },
    "languages": {
        "Markdown": {
            "format_on_save": "on",
        }
    },
    "language_servers": ["eslint", "vtsls"],
    "language_server_options": {
        "eslint": {
            "language_ids": [
                "javascript",
                "javascriptreact",
                "json",
                "jsonc",
                "markdown",
                "toml",
                "typescript",
                "typescriptreact",
                "yaml",
            ],
        }
    }
}
