{
    "prettier.enable": false,
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.organizeImports": "never",
    },
    "cSpell.words": [
        "abbrs",
        "attributify",
        "fdescribe",
        "importx",
        "jsdelivr",
        "lockb",
        "outro",
        "perfactionist",
        "shadcn",
        "stroustrup",
        "tsreset",
    ],
    "eslint.validate": [
        "json",
        "jsonc",
        "json5",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue",
        "markdown",
        "yaml",
        "toml",
        "html",
        "css",
        "less",
        "scss",
    ],
}
