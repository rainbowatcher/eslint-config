    "compilerOptions": {
        "target": "ESNext",
        "baseUrl": ".",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "packages/**/*.ts",
        "test/**/*.ts",
        "test/**/_.ts",
        "vitest.config.ts"
    ]
}