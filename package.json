{
    "name": "@rainbowatcher/eslint-config-mono",
    "type": "module",
    "version": "0.3.8",
    "private": true,
    "packageManager": "pnpm@9.0.6+sha512.f6d863130973207cb7a336d6b439a242a26ac8068077df530d6a86069419853dc1ffe64029ec594a9c505a3a410d19643c870aba6776330f5cfddcf10a9c1617",
    "author": "rainbowatcher <rainbow-w@qq.com>",
    "license": "MIT",
    "homepage": "https://github.com/rainbowatcher/eslint-config#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rainbowatcher/eslint-config.git"
    },
    "bugs": {
        "url": "https://github.com/rainbowatcher/eslint-config/issues"
    },
    "scripts": {
        "lint": "eslint .",
        "build": "pnpm -r build",
        "build:watch": "pnpm -r --parallel build:watch",
        "prepare": "simple-git-hooks",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
        "release": "bumpp -r && pnpm -r publish",
        "test": "vitest"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^19.2.2",
        "@rainbowatcher/eslint-config-json": "workspace:*",
        "@rainbowatcher/eslint-config-ts": "workspace:*",
        "@types/eslint": "^8.56.10",
        "@types/node": "^20.12.7",
        "@vitest/ui": "^1.5.2",
        "bumpp": "^9.4.0",
        "commitlint": "^19.3.0",
        "conventional-changelog-cli": "^5.0.0",
        "eslint": "^9.1.1",
        "eslint-flat-config-utils": "^0.2.4",
        "lint-staged": "^15.2.2",
        "simple-git-hooks": "^2.11.1",
        "tsup": "^8.0.2",
        "typescript": "^5.4.5",
        "vitest": "^1.5.1"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged",
        "commit-msg": "npx commitlint --edit $1"
    },
    "lint-staged": {
        "*.{js,ts,json}": "eslint --fix"
    }
}
