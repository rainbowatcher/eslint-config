{
    "name": "@rainbowatcher/eslint-config-mono",
    "type": "module",
    "version": "0.5.1",
    "private": true,
    "packageManager": "pnpm@9.1.1",
    "author": "rainbowatcher <rainbow-w@qq.com>",
    "license": "MIT",
    "homepage": "https://github.com/rainbowatcher/eslint-config#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rainbowatcher/eslint-config.git"
    },
    "bugs": {
        "url": "https://github.com/rainbowatcher/eslint-config/issues"
    },
    "scripts": {
        "lint": "eslint .",
        "build": "pnpm -r --sequential build",
        "watch": "pnpm --parallel watch",
        "prepare": "simple-git-hooks && tsx scripts/gen_type.ts",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
        "release": "bumpp -r && pnpm -r publish",
        "test": "vitest"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^19.2.2",
        "@types/eslint": "^8.56.10",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^20.12.11",
        "@vitest/ui": "^1.6.0",
        "bumpp": "^9.4.1",
        "commitlint": "^19.3.0",
        "conventional-changelog-cli": "^5.0.0",
        "eslint": "^9.2.0",
        "eslint-typegen": "^0.2.4",
        "eslint-vitest-rule-tester": "^0.3.2",
        "fast-glob": "^3.3.2",
        "globals": "^15.2.0",
        "lint-staged": "^15.2.2",
        "simple-git-hooks": "^2.11.1",
        "tsup": "^8.0.2",
        "tsx": "^4.10.2",
        "typescript": "^5.4.5",
        "vitest": "^1.6.0",
        "vue": "^3.4.27"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged",
        "commit-msg": "npx commitlint --edit $1"
    },
    "lint-staged": {
        "*.{js,ts,json}": "eslint --fix"
    }
}
